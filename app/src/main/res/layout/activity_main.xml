<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blovvme.week6day4.MainActivity">

    <com.blovvme.week6day4.CustomPie
        android:id="@+id/pie_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"/>
    <com.blovvme.week6day4.CustomViewButton
        android:text="Press"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cellStyle"
        android:id="@+id/btnCustom"
        android:layout_gravity="center_horizontal"
        android:layout_column="3"
        android:layout_weight="1" />
    <com.blovvme.week6day4.CustomViewTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ctvText"
        android:layout_weight="1"
        android:text="This is a Custom TextView"
        android:textSize="20dp"/>

</LinearLayout>
